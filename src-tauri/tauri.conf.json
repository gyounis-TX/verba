{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Explify",
  "version": "0.2.0",
  "identifier": "com.explify.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Explify",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 600,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/sidecar"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/gyounis-TX/verba/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEQjdCOUQ5NDUxQzlGNTgKUldSWW54eEYyYm0zYmU2ZGNXODRYTzlOZklJcWFuTEUyNWtSTFVYMWJKUUZEVFJENlJnWjZCRnUK"
    }
  }
}
